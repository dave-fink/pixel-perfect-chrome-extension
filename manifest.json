{
  "manifest_version": 3,
  "name": "Pixel Perfect Overlay",
  "version": "1.0",
  "description": "A Chrome extension for pixel-perfect comparison with overlay functionality",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_icon": {
      "16": "pixel-perfect.png",
      "32": "pixel-perfect.png",
      "48": "pixel-perfect.png",
      "128": "pixel-perfect.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["pixel-perfect-icon.png", "pixel-perfect-gray.png"],
      "matches": ["<all_urls>"]
    }
  ]
} 