{
  "manifest_version": 3,
  "name": "Pixel Perfect Overlay",
  "version": "1.0",
  "description": "Simultaneously overlay a local development page on top of any live site for precise, pixel-perfect comparison. Forget toggling tabs!",
  "permissions": [
    "activeTab",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "http://localhost:*/*",
    "https://localhost:*/*",
    "http://127.0.0.1:*/*",
    "https://127.0.0.1:*/*"
  ],
  "action": {
    "default_icon": {
      "16": "icons/pixel-perfect.png",
      "32": "icons/pixel-perfect.png",
      "48": "icons/pixel-perfect.png",
      "128": "icons/pixel-perfect.png"
    }
  },
  "icons": {
    "16": "icons/pixel-perfect.png",
    "32": "icons/pixel-perfect.png",
    "48": "icons/pixel-perfect.png",
    "128": "icons/pixel-perfect.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/*"],
      "matches": ["<all_urls>"]
    }
  ]
} 